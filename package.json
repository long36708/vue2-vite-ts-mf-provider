{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "vue2-vite-ts-mf-provider",
  "description": "Vue2 TypeScript Startar project for Vite.",
  "version": "1.0.0",
  "license": "MIT",
  "type": "module",
  "private": true,
  "author": {
    "name": "longmo"
  },
  "homepage": "https://github.com/long36708/vue2-vite-ts-mf-provider",
  "repository": {
    "type": "git",
    "url": "git@github.com:long36708/vue2-vite-ts-mf-provider.git"
  },
  "bugs": {
    "url": "https://github.com/long36708/vue2-vite-ts-mf-provider/issues"
  },
  "engines": {
    "node": ">=18.12.5",
    "yarn": ">=1.22.19"
  },
  "scripts": {
    "vite:dev": "vite --port 4174 --host",
    "preview": "vite preview --port 4174 --host",
    "clean": "rimraf ./node_modules/.vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "build:analyze": "vite build --mode analyze",
    "build:clean": "rimraf dist",
    "lint": "eslint . --fix --cache --cache-location ./node_modules/.vite/vite-plugin-eslint && prettier . -w -u",
    "lint:style": "stylelint \"./**/*.{css,sass,scss,htm,html,vue}\" --fix --cache-location ./node_modules/.vite/vite-plugin-stylelint && prettier \"./**/*.{css,sass,scss,htm,html,vue}\" -w -u",
    "test:unit": "vitest",
    "build-only": "vite build",
    "type-check": "vue-tsc --build --force",
    "postinstall": "patch-package",
    "serve:local": "cd dist && http-serve -p 4174",
    "prepare": "husky install"
  },
  "dependencies": {
    "@module-federation/enhanced": "^0.21.4",
    "@module-federation/vite": "^1.9.0",
    "@logue/vue2-helpers": "^2.3.0",
    "patch-package": "^8.0.0",
    "vue": "2.7.16",
    "vue-router": "^3.6.5",
    "vuex": "^3.6.2",
    "vuex-persist": "^3.1.3"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.15.0",
    "@tsconfig/node-lts": "^22.0.4",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^22.9.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@vitejs/plugin-vue2": "^2.3.4",
    "@vitest/coverage-v8": "^1.6.1",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/test-utils": "^1.3.6",
    "@vue/tsconfig": "^0.5.1",
    "eslint": "^8.56.0",
    "eslint-config-standard-with-typescript": "^43.0.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^3.10.1",
    "eslint-plugin-html": "^7.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.5.0",
    "eslint-plugin-prettier": "^5.1.2",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-tsdoc": "^0.2.17",
    "eslint-plugin-vue": "^9.33.0",
    "eslint-plugin-vuejs-accessibility": "^2.4.1",
    "eslint-plugin-yaml": "^0.5.0",
    "husky": "^9.1.7",
    "jsdom": "^27.2.0",
    "lint-staged": "^16.2.7",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "postcss-html": "^1.8.0",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.10",
    "rollup-plugin-visualizer": "^5.14.0",
    "sass": "^1.94.2",
    "stylelint": "^16.26.0",
    "stylelint-config-recommended-scss": "^14.1.0",
    "stylelint-config-recommended-vue": "^1.6.1",
    "stylelint-order": "^7.0.0",
    "typescript": "*",
    "vite": "^7.2.4",
    "vite-plugin-checker": "^0.6.4",
    "vitest": "^1.6.1",
    "vue-eslint-parser": "^9.4.3",
    "vue-template-compiler": "2.7.16",
    "vue-tsc": "^1.8.27"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,json,yaml,yml,toml,vue,htm,html,md}": "eslint --fix --cache --cache-location ./node_modules/.vite/vite-plugin-eslint",
    "*.{css,sass,scss,vue,htm,html}": "stylelint --fix --cache --cache-location ./node_modules/.vite/vite-plugin-stylelint",
    "*": "prettier -w -u"
  },
  "resolutions": {
    "json5": "^2.2.3",
    "postcss": "^8.4.31",
    "semver": "^7.5.3",
    "yaml": "^2.3.2"
  },
  "stackblitz": {
    "startCommand": "npm run test:unit"
  },
  "volta": {
    "node": "22.21.1"
  }
}
