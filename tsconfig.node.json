{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "extends": "@tsconfig/node-lts/tsconfig.json",
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*",
    "module-federation.config.*",
    "package.json"
  ],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "types": ["node"],
    "lib": ["ES2021", "ESNext.Array", "ESNext.Collection"]
  }
}
